{
  "manifest_version": 3,
  "author": "Park, JaeHyung",
  "name": "Ecaplus 출결기",
  "version": "1.2",
  "description": "ecaplus 출결기입니다.",
  "icons": {
    "16": "logo/logo16.png",
    "48": "logo/logo48.png",
    "128": "logo/logo128.png"
  },
  "content_scripts": [
    {
      "js": ["main/main.js"],
      "matches": ["http://ecaplus.co.kr/*"]
    },
    {
      "js": ["main/main.js", "main/login.js"],
      "matches": ["http://ecaplus.co.kr/attend/"]
    },
    {
      "js": ["main/main.js", "main/attend.js"],
      "css": ["main/attend.css"],
      "matches": ["http://ecaplus.co.kr/attend/main"]
    }
  ],
  "action": {
    "default_popup": "brower_action/index.html",
    "default_title": "ecaplus 출결 인증"
  },
  "permissions": ["storage"]
}
